upstream fastcgi_backend {
        server  unix:/run/php/php{{ php_version }}-fpm.sock;
}

server {
        listen 80;
        listen [::]:80;

        server_name {{ server_hostname }};

        set $MAGE_ROOT {{ magento_dir }};

        include /var/www/html/{{ server_hostname }}/nginx.conf.sample;
}
